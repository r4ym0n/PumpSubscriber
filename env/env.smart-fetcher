# Smart IPFS Fetcher Configuration
# This extends the common configuration with smart fetching strategy

# Basic NATS connection (same as common)
NATS_WS_URL=wss://prod-advanced.nats.realtime.pump.fun/

# Smart IPFS Configuration
SMART_IPFS_ENABLED=true

# Local gateway (try this first)
SMART_IPFS_LOCAL_GATEWAY=http://localhost:8080/ipfs

# Public gateways (fallback when local fails or times out)
SMART_IPFS_PUBLIC_GATEWAYS=https://ipfs.io/ipfs,https://gateway.pinata.cloud/ipfs,https://cloudflare-ipfs.com/ipfs,https://dweb.link/ipfs

# Timeout configurations (in milliseconds)
SMART_IPFS_LOCAL_TIMEOUT_MS=200
SMART_IPFS_PUBLIC_TIMEOUT_MS=30000

# Maximum bytes to download
SMART_IPFS_MAX_BYTES=20971520

# Fallback threshold: if local gateway takes longer than this, start public gateways
SMART_IPFS_FALLBACK_THRESHOLD_MS=200

